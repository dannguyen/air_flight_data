<section class="container fold">

	<h2><%=@airline.name%></h2>

	<div class="row">

		<p>
			For <strong class="tk"><%=@year%></strong>, through the month of <strong class="tk"><%=@month%></strong>,
			   <%=@airline.name%> has
			   <strong class="tk"><%=number_with_delimiter @airline_ytd_records.arrivals %> arrivals</strong> among its largest airportsTK.
		</p>

		<p>
			In this time period, <%=@airline.name%> had 

			<%=number_to_percentage_100(@airline_ytd_records.delayed_arrivals_rate) %>
			of its arrivals were late by <strong>15 minutes or more</strong>. 

			About <strong><%=number_to_percentage_100( @airline_ytd_records.carrier_delayed_arrivals_rate) %></strong> of the arrivals were late due to
			factors within <%=@airline.name%>'s control, according to the FAA(TK).


		</p>



	  
	   






	</div>




	<div class="row">
		<div class="span6">
	
			<%=partial "ontime/top-delayed-statbox", :locals=>{:years=>[SkiftAir::Settings::THIS_YEAR, SkiftAir::Settings::THIS_YEAR-1], :month=>SkiftAir::Settings::THIS_MONTH}%>		
		</div>	
	</div>

</section> <!-- container fold-->



<section class="container fold">

<table>
<% @airports_by_arrivals_sum.each do |arr| %>
	<% airport, arrivals = arr%>

	<tr>
		<td><%=link_to airport.name, url_for(:ontime_records, :delays_by_airport_and_airline, :airport=>airport, :airline=>@airline)%></td>
		<td><%=number_with_delimiter arrivals%></td>
		<td><%#=number_with_delimiter @airline.delayed_arrivals_at_airport(airport)%></td>
		<td><%#=arrivals/@airline.delayed_arrivals_at_airport(airport).to_f%></td>
	</tr>


<% end %>
</table>

</section> <!-- container fold-->


<section class="container fold">
	<h3>Carrier-caused delay rate</h3>
	<%=partial 'ontime/graphics/test-line', :locals=>{:datapoints=> OntimeRecord.format_group_sum_for_delay_causes_stacked_chart(@ontime_records_grouped) } %>

</section>





<section class="container fold">
	

	<h3>Causes for delay</h3>
	<%=partial 'ontime/graphics/test-line', :locals=>{:datapoints=> OntimeRecord.format_group_sum_for_delay_causes_stacked_chart(@ontime_records_grouped) } %>

</section>



<section class="container fold">
	<%=partial "ontime/raw-tabular-data", :locals=>{:records=>@ontime_records_grouped}%>



</section>